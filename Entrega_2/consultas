% Consulta 1
usuario = 'id'
fecha = ''

SELECT T.rec_id, T.manda_id, T.cantidad, T.fecha
FROM Transacciones as T, Usuarios as U
WHERE U.id = T.manda_id
AND U.id = usuario
AND T.fecha = fecha
UNION
SELECT T.rec_id, T.manda_id, T.cantidad, T.fecha
FROM Transacciones as T, Usuarios as U
WHERE U.id = T.rec_id
AND U.id = usuario
AND T.fecha = fecha

% Consulta 2
fecha = ''
zorzales = ''
SELECT PH.z_en_usd*zorzales, PH.z_en_clp*zorzales
FROM PreciosHistoricos AS PH
WHERE PH.fecha = fecha

% Coonsulta 3
usuario = ''
SELECT T.rec_id, T.manda_id, T.cantidad, T.fecha
FROM Transacciones AS T, Usuarios AS U
WHERE U.id = T.manda_id
AND U.id = usuario
AND T.fecha >= ALL(SELECT T2.fecha
                  FROM Transacciones AS T2)

% Consulta 4
pais = ''
SELECT *
FROM Usuarios AS U
WHERE U.pais = pais

% Consulta 5
ano_mes_pasado = ''
SELECT MEAN(PH.z_en_usd), MEAN(PH.z_en_clp)
FROM PreciosHistoricos AS PH
WHERE PH.fecha LIKE ano_mes_pasado+'___'

% Consulta 6
a)
SELECT T.fecha
FROM Transacciones AS T
WHERE COUNT(T.rec_id) >= ALL (SELECT COUNT (T2.rec_id)
                                FROM Transacciones AS T2
                                GROUP BY T2.fecha)
GROUP BY T.fecha

% b)
SELECT T.fecha
FROM Transacciones AS T
WHERE COUNT(T.manda_id) >= ALL (SELECT COUNT (T2.manda_id)
                                FROM Transacciones AS T2
                                GROUP BY T2.fecha)
GROUP BY T.fecha

% Consulta 7
SELECT U.saldo
FROM Usuarios AS U
